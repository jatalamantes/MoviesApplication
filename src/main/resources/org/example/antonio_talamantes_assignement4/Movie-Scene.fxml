                        <TextField fx:id="textField_Year" prefWidth="170.0" promptText="Year" VBox.vgrow="ALWAYS" />
                        <TextField fx:id="textField_Sales" prefWidth="170.0" promptText="Sales" VBox.vgrow="ALWAYS" />
