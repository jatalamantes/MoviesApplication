                  <items>
                    <MenuItem fx:id="menu_Item_About" mnemonicParsing="false" onAction="#menu_Item_About" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="moviesTableView" prefHeight="431.0" prefWidth="450.0" HBox.hgrow="ALWAYS">
